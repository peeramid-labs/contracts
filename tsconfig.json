{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@zkit": ["./types/zk"]
    }
  },
  "include": [
    "./test",
    "./src",
    "./scripts",
    "hardhat.config.js",
    "./deploy",
    "playbook/utils.ts",
    "./types/**/*.d.ts"
  ],
  "files": ["hardhat.config.ts"]
}
