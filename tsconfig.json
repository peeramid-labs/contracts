{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "@openzeppelin/*": ["node_modules/@openzeppelin/*"],
      "@peeramid-labs/*": ["node_modules/@peeramid-labs/*"],
      "@zkit": ["./generated-types/zkit"],
      "src/*": ["src/*"],
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "./test",
    "./src",
    "./scripts",
    "hardhat.config.js",
    "./deploy",
    "playbook/utils.ts",
    "./types/**/*.d.ts"
  ],
  "files": ["hardhat.config.ts"]
}
