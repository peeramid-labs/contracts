{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "es2022": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:promise/recommended",
    "prettier" // eslint-config-prettier
  ],
  "plugins": ["promise"],
  "ignorePatterns": ["docs/templates/", "node_modules/"],
  "globals": {
    "artifacts": "readonly",
    "contract": "readonly",
    "assert": "readonly",
    "web3": "readonly"
  },
  "rules": {
    "no-unused-vars": "off"
  }
}
