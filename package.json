    "lint": "eslint ./ --ext js,jsx,ts,tsx && pnpm run lint:sol",
    "upgrade:game:mumbai": "source .secrets/hh_mumbai.env &&  pnpm hardhat --network mumbai deploy --tags upgrade_game",
